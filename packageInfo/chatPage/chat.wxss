/* 聊天内容 */
.content {
  width: 100%;
  height: 90vh;
  overflow-y: scroll;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.chat-item {
  box-sizing: border-box;
  padding: 20rpx;
  background-color: rgba(234, 235, 235, 0.753);
  border-radius: 30rpx;
  display: flex;
  margin-top: 10rpx;
  font-size: 28rpx;
}


.chat-item .headPic {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  flex-shrink: 0;
}


/* 评论框 */
.mask-content {
  width: 100%;
  background-color: #ffffff;
  box-sizing: border-box;
  padding: 30rpx 25rpx;
  border-radius: 20rpx 20rpx 0 0;
  position: fixed;
  bottom: 271px;
  z-index: 9;
}

.mask-content textarea {
  width: 100%;
  height: 10vh;
  background-color: #f2f2f6;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
}

.mask-content-bottom {
  height: 8vh;
  justify-content: flex-end;
}

.bottom-left,
.bottom-right {
  height: 100%;
  position: relative;
}

.bottom-right .image {
  width: 11vw;
  height: 11vw;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.bottom-right .image::after {
  content: "×";
  position: absolute;
  font-size: 40rpx;
  font-weight: bolder;
  top: 0rpx;
  right: 140rpx;
  background-color: #fcbc39;
  padding: 0 10rpx;
  border-radius: 50%;
  pointer-events: auto;
}

.bottom-left .icon {
  width: 10vw;
  height: 10vw;
}

.mask-content .button {
  color: #fff;
  width: 140rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  background-color: #3ab54d;
  border-radius: 20rpx;
}




/* 底部评论按钮 */
.bottom-button {
  width: 100%;
  height: 10vh;
  background-color: #fff;
  position: fixed;
  bottom: 0;
}

.bottom-input {
  width: 80%;
  height: 5vh;
  background-color: #f2f3f7;
  border-radius: 50rpx;
}


.bottom-input-text {
  margin-left: 15%;
  color: #ccc;
}


/* 分享按钮 */
.share-button {
  width: 3vh;
  height: 3vh;
}

.share {
  width: 5vh;
  height: 5vh;
  overflow: hidden;
}

.share-win {
  width: 100%;
  height: 30vh;
  background-color: #fff;
  position: fixed;
  top: 70vh;
  border-radius: 20rpx 20rpx 0 0;
}

.middle-content {
  margin-top: 40rpx;
}

.share-win .title {
  margin-top: 20rpx;
  font-size: 35rpx;
}

.common-button {
  width: 80%;
  color: #1e1d1f;
  border-radius: 100rpx;
  background-color: #f2f3f7;
  font-weight: 100;
  height: 6vh;
  margin-bottom: 50rpx;
}

.share-win-item {
  margin-left: 40rpx;
  color: #8d8d8d;
}

.share-win-item .image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}