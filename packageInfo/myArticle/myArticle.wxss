.person {
  width: 100vw;
  background-color: #f5f6f6;
}

.person-header {
  width: 100%;
  height: 30vh;
  position: relative;
}

.person .back,
.person .userInfo {
  width: 100%;
  height: 100%;
  position: absolute;
}

.person .userInfo {
  padding: 60rpx;
  box-sizing: border-box;
  color: #fff;
}

.person .userInfo .up {
  width: 100%;
}

.person .userInfo .up .gender {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.up-text {
  margin-left: 30rpx;
  font-size: 35rpx;
  font-weight: bolder;
}

.person .userInfo .up image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.person .userInfo .down {
  flex: 1;
  padding-top: 50rpx;
}

.person .numInfo {
  width: 100%;
  height: 13vh;
  display: flex;
  color: rgb(99, 99, 99);
  font-size: 30rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 20rpx 0;
  box-shadow: 0 10rpx 20rpx 1rpx rgb(165, 165, 165);
}

.person .numInfo view {
  display: flex;
  flex-direction: column;
}

.person .numInfo view {
  flex: 1;
  justify-content: space-around;
  align-items: center;
}

.person .numInfo view .num {
  font-size: 45rpx;
  font-weight: bolder;
}

.person .card-list {
  width: 100%;
  height: auto;
}

.one {
  color: #3db24e;
}

.two {
  color: #f17b23;
}

.three {
  color: #0f7fe8;
}

.send-button {
  margin-left: 20rpx;
  font-size: 3s0rpx;
  background-color: rgb(209, 230, 92);
  padding: 5rpx 20rpx;
  border-radius: 20rpx;
}