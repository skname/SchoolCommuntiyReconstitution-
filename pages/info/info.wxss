/* 对齐方式 */
.middle .one {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.header {
  width: 94vw;
  box-sizing: border-box;
  margin: 30rpx 0rpx;
  padding: 25rpx;
  overflow: hidden;
  position: relative;
}

.header-right {
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  position: absolute;
  margin-left: 175rpx;
}

.header-left {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.student-info {
  display: flex;
  flex-direction: column;
  width: 90%;
}


.middle {
  width: 90%;
  margin-bottom: 40rpx;
  background-color: white;
  padding: 0rpx 20rpx;
  border-radius: 20rpx;
}

.middle .one {
  position: relative;
  height: 90rpx;
  width: 100%;
  border-bottom: 1rpx solid #ebe9e9;
}

.middle .one:nth-last-child(1) {
  border: none;
}

.middle image {
  width: 30rpx;
  height: 30rpx;
}

.feedback {
  width: 100%;
  position: absolute;
  background-color: ghostwhite;
  opacity: 0;
}

.noBind {
  margin: 10rpx 0;
  background-color: #30e3ca;
  position: static;
}