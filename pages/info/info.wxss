.contain{
    width: 100vw;
    height: 100vh;
    background-color: rgb(241, 241, 241);
    overflow: hidden;
    position: relative;
}

.header {
    box-sizing: border-box;
    margin: 30rpx 0rpx;
    padding: 25rpx;
    background-color: ghostwhite;
    font-size: 28rpx;
    position: relative;
}
.photo {
    display: flex;
    flex-direction: row;
}
.photo image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
}
.photo view{
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.middle{
    width: 94%;
    margin-left: 3%;
    margin-top: 40rpx;
    margin-bottom: 40rpx;
    background-color: ghostwhite;
    box-sizing: border-box;
    padding: 0rpx 20rpx;
    border-radius: 20rpx;
}

.middle .one{
    position: relative;
    height: 80rpx;
    width: 100%;
    display: flex;
    font-size: 30rpx;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid #ebe9e9;
}
.middle .one:nth-last-child(1){
    border: none;
}

.middle image{
    width: 30rpx;
    height: 30rpx;
}

.card{
    width: 50vw;
    height: 400rpx;
    box-sizing: border-box;
    padding: 20rpx;
    background-color: rgb(237, 240, 237);
    border-radius: 20rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    box-shadow: 0rpx 0rpx 10rpx 10rpx rgb(199, 199, 199);
}
.card radio-group{
    display: flex;
    flex-direction: row;
} 
.select{
    width: 100%;
    display: flex;
    flex-direction: row;
}
.select text{
    display: flex;
    width: 50%;
    height: 60rpx;
    align-items: center;
    justify-content: center;
    border-radius: 20rpx;
    color: #fff;
}
.disclose{
    background-color: rgb(236, 40, 40);
}
.confirm{
    background-color: rgb(51, 233, 111);
}

.feedback{
    width: 100%;
    position: absolute;
    background-color: ghostwhite;
    opacity: 0;
}

.replyNum{
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    background-color: red;
    color: #fff;
    font-weight: 700;
    position: absolute;
    text-align: center;
    line-height: 40rpx;
    right: 50rpx;
}