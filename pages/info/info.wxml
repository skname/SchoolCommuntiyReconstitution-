<view class="contain">
    <view class="header">
        <view wx:if="{{ isBind }}">
            <view class="photo">
                <image src="{{userInfo.avatarUrl}}"></image>
                <view>
                    <text>{{ userInfo.nickName}}</text>
                    <text>性别：{{userInfo.gender}}</text> 
                </view>
            </view>
        </view>
        <view wx:else class="noBind">
            <text> 请先绑定，解锁更多功能 </text>
        </view>
    </view>
    <view class="middle">
        <navigator wx:if="{{ isBind }}" class="one" url="/packB/Person/index?openid={{openid}}&&head={{head}}&&name={{name}}&&type=my">
            <text>我的贴子</text> <image src="{{icons[0]}}"></image>
        </navigator>
        <navigator bindtap="clearReply" class="one" url="/packA/MyMessage/myMessage" wx:if="{{isBind}}">
            <text>我的消息</text> <text wx:if="{{reply!==0}}" class="replyNum">{{reply}}</text> <image src="{{icons[0]}}"></image>
        </navigator>  
        <view class="one">
            <button style="width: 100%;height: 80rpx;" open-type="feedback" class="feedback"></button>
            <text>意见反馈</text><image src="{{icons[0]}}"></image>
        </view>
        <navigator url="{{item.url}}" wx:for="{{ List }}" wx:key="index" class="one">
            <text>{{ item.name }}</text> <image src="{{icons[0]}}"></image>
        </navigator>
    </view>

    <view class="botton">
        <button wx:if="{{ isBind }}" type="warn" bindtap="emitLogin" style="width: 100%;background-color: rgb(238, 57, 57); color: whitesmoke;"  >退出登录</button>
        <button wx:if="{{ !isBind }}" bindtap="getUserInfo" style="width: 100%;background-color: rgb(238, 57, 57); color: whitesmoke;">立即绑定</button>
    </view>
    <view class="card" wx:if="{{isopen}}">
        <text style="font-size: 27rpx;color: rgb(243, 51, 51);">确认后不可再更改，请认真选择</text>
        <radio-group bindchange="selectSex">
            <radio value="男">男</radio>
            <radio value="女">女</radio>
        </radio-group>
        <view class="select" >
            <text class="disclose" bindtap="close">取消</text>
            <text class="confirm" bindtap="confirm">确认</text>
        </view>
    </view>
</view>