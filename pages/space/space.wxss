/* pages/space/space.wxss */
.navigation{
    width: 100%;
    height: 8vh;
    font-size: 31rpx;
    background-color: #fff;
    line-height: 8vh;
    display: flex;
    flex-direction: row;
    position: fixed;
    box-shadow: 0 2rpx 10rpx 2rpx rgb(175, 174, 174);
    flex-wrap: nowrap;
    z-index: 100;
    top: 0;
}
.navigation .item{ 
    padding-left: 16rpx; 
    padding-right: 16rpx;
} 

.selected{
    font-weight: bold;
    color: #99CC99;
    border-bottom: 5rpx #99CC99 solid;
  }
.content{ 
    margin-top: 8vh;
    width: 100%;
    height: auto;
    background-color: #EDEDED;
}
.content .card {
    width: 100%;
    height: auto;
    margin-top: 20rpx;
    background-color: #fff;
    border-radius: 30rpx;
    padding-bottom: 20rpx;
}
.card .text,.head,.image{
    width: 94%;
    margin-left: 3%;
    padding-top: 20rpx;
}

.card .text{
    padding-bottom: 20rpx;
}
.content .image {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
}
.content .image image{
    width: 29vw;
    height: 29vw;
    margin-bottom: 10rpx;
    border-radius: 10rpx;
}

.public{
    width: 70rpx;
    height: 70rpx;
    box-shadow: 0 0 2rpx 2rpx rgba(122, 122, 122, 0.603);
    border-radius: 50%;
    position: fixed;
    bottom: 50rpx;
    right: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.public image{
    width: 50rpx;
    height: 50rpx;
}

.Top{
    width: 100vw;
    height: 29rpx;
    color: aqua;
}

#head{
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #000;
    padding: 20rpx;
    font-weight: 700;
    font-size: 30rpx;
    border-bottom:1rpx solid rgb(241, 240, 240);
}
#head image{
    width: 35rpx;
    height: 35rpx;
    margin-right: 20rpx;
}

.webview{
    margin: 10rpx 20rpx;
    font-size: 28rpx;
    color: cornflowerblue;
}
.imagess{
    width: 94%;
    margin-left: 3%;
}