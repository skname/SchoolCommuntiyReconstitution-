.container,
.content .content-left,
.content .content-right {
  display: flex;
  flex-direction: column;
}

.container .content,
.content .content-right .content-right-title,
.footer {
  display: flex;
  flex-direction: row;
}

.container .content {
  width: 100%;
  flex: 1;
}

.content .content-left {
  width: 5vw;
  margin-top: 5vh;
}

.content .content-left view {
  text-align: center;
  flex: 1;
}

.content .content-right {
  flex: 1;
}

.content .content-right .content-right-title {
  height: 5vh;
  line-height: 5vh;
}

.content .content-right .content-right-title view {
  flex: 1;
  text-align: center
}

.content-right-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.column {
  width: 100%;
  height: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.row {
  font-size: 25rpx;
  flex: 1;
  width: 90%;
  height: 100%;
  color: #f5f7fa;
  box-sizing: border-box;
  overflow: hidden;
  box-sizing: border-box;
  padding: 10rpx;
  margin: 5rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border-radius: 20rpx;

}

.footer {
  height: 8vh;
  width: 100%;
  background-color: #c3bef0;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  color: #fff;
}

.footer view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.notice-component {
  width: 100%;
  height: 6vh;
}