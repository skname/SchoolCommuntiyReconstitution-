.contain{
    width: 100vw;
    height: 100vh;
    background-repeat: no-repeat;
    background-size: cover;
}
.header{
    width: 100%;
    height: 20vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    border-bottom: 1rpx solid rgb(103, 174, 231);
}

.header input{
    width: 70vw;
    height: 5vh;
    border-radius: 20rpx;
    background-color: rgb(235, 241, 241);
    box-sizing: border-box;
    padding: 0rpx 10rpx;
    line-height: 5vh;
}
.header .btn{
    width: 30vw;
    height: 4vh;
    background-color: darkcyan;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 20rpx;
}

.contentList{
    width: 94%;
    margin-left: 3%;
    box-sizing: border-box;
    padding: 20rpx 0rpx;
    height: 80vh;
    overflow: scroll;

}
.card {
    margin: 20rpx 0rpx;
    font-size: 30rpx;

}
.cardhead{
    display: flex;
    flex-direction: row;
}
.contentList .card,.card .cardhead view{
    display: flex;
    flex-direction: column;
}

.card .cardhead view{
    margin-left: 20rpx;

    justify-content: space-between;
}
.contentList .card image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.time{
    font-size: 25rpx;
    color: darkgrey;
}