.contaner{
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    position: relative;
}
.text{
    width: 100vw;
}
.text textarea{
    box-sizing: border-box;
    width: 100%;
    height: 15vh;
    padding: 20rpx;
    background-color: #fff;
}

.selectImg{
    width: 100%;
    height: auto;
    margin-top: 20rpx;
    background-color: #fff;
    padding-bottom: 20rpx;
}
.selectImg .inner{
    width: 94%;
    margin-left: 3%;
    display: flex;
    flex-direction: column;
}

.selectImg .inner .head{
    padding: 20rpx 0rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.selectImg .inner .box{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}
/* 图片大小 */
.selectImg .box image,.imageOne,.appendImg{
    width: 26vw;
    height: 26vw;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.appendImg{
    border: 1rpx solid red;
    display: flex;
    align-items: center;
    justify-content: center;
}
.selectImg .box .appendImg image{
    width: 50rpx;
    height: auto;
}

.imageOne {
    position: relative;
}
.imageOne .close{
    position: absolute;
    width: 35rpx;
    height: 35rpx;
    border-radius: 10rpx;
    top: 0rpx;
    right: 0rpx;
    background-color: rgba(63, 65, 64, 0.377);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
}


.middle{
    width: 100%;
    margin-top: 20rpx;
}
.middle .middleinner{
    width: 94%;
    height: auto;
    margin-left: 3%;
    border-radius: 10rpx;
    background-color: #fff;
}
.middle .middleinner view{
    box-sizing: border-box;
    padding-left: 20rpx;
    padding-right: 20rpx;
    font-size: 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;

}
.selectIdentity{
    height: 5vh;
    align-items: center;
    border-bottom: 1rpx solid rgb(238, 236, 236);
}

.selectCard{
    width: 55vw;

}
.select{
    padding: 20rpx 0rpx;
}

/* 最下边button */
.bottom{
    width: 94%;
    height: 5vh;
    border-radius: 10rpx;
    margin: 3%;
    background-color: #07C160;
    color: #fff;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
#canvas_compress{
    position: absolute;
    top: -1000rpx;
    left: 0rpx;
}

