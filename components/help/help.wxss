.help {
  width: 80vw;
  height: 25vh;
  background-color: #fff;
  border-radius: 50rpx;
  justify-content: center;
  position: relative;
  overflow: hidden;
}
.head {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 5rpx solid #fda403;
  box-shadow: 0 0 10rpx 2rpx #fda403;
  margin-bottom: 60rpx;
}
.head .head-pic {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.help-bottom {
  height: 25%;
  width: 100%;
  position: absolute;
  bottom: 0;
}
.help-bottom-item {
  flex: 1;
  width: 100%;
  height: 100%;
  color: #fff;
}
.button-right {
  background-color: royalblue;
}
.button-left {
  background-color: #eb586f;
}
