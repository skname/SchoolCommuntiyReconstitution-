.container {
  width: 100vw;
  height: 100vh;
  -webkit-overflow-scrolling: touch;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f6f6;
  border: 0rpx;
  padding: 0rpx;
  font-size: 32rpx;
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  position: relative;
}


.common-button {
  width: 94%;
  height: 7vh;
  font-size: 35rpx;
  font-weight: bold;
  border-radius: 20rpx;
  text-align: center;
  line-height: 7vh;
  color: #fff;
  background-color: #e23e57;
  margin-top: auto;
  margin-bottom: 10vh;
}

/* 九宫格 */
.IMAGEBOX {
  padding: 20rpx 2vw;
  width: 100vw;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: flex-start;
  overflow: hidden;
  box-sizing: border-box;
}

.IMG {
  width: 30vw;
  height: 30vw;
  margin: 1vw;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 遮罩 */
.golbal-mask {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
  position: absolute;
  left: 0;
  top: 0;
  z-index: 9999;
}

/* 弹窗 */
.pop-window {
  width: 100%;
  height: 20vh;
  background-color: #cadefc;
  position: absolute;
  bottom: 0;
}