.container {
  min-height: 100vh;
  height: 100%;
  position: relative;
}

.card,
.comment {
  width: 100vw;
}

.comment {
  box-sizing: border-box;
  padding-bottom: 10vh;
}

.comment .comment-item {
  padding: 30rpx 20rpx;
  border-bottom: 2rpx rgba(221, 220, 220, 0.541) solid;
  background-color: #fff;
}

.comment-item .comment-item-left {
  flex-shrink: 0;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  overflow: hidden;
}

.comment-item .comment-item-left image {
  width: 100%;
  height: 100%;
}

.comment-item .comment-item-right {
  width: 100%;
  margin-left: 30rpx;
}

.comment-item-right .comment-nickName,
.comment-item-right .comment-content {
  margin-top: 10rpx;
}

.comment-item-right .comment-content {
  width: 100%;
}

/* 二级评论 */
.comment-item-right .comment-child {
  font-size: 28rpx;
  color: cornflowerblue;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  background-color: #f2f3f7;
  border-radius: 20rpx;
}

.comment-item-right .comment-child .comment-child-item {
  padding: 20rpx 0;
}

.comment-item-right .comment-time {
  margin-top: 10rpx;
  color: #ccc;
}

/* 评论框 */
.mask-content {
  width: 100%;
  background-color: #ffffff;
  box-sizing: border-box;
  padding: 30rpx 25rpx;
  border-radius: 20rpx 20rpx 0 0;
  position: fixed;
  bottom: 271px;
  z-index: 9;
}

.mask-content textarea {
  width: 100%;
  height: 10vh;
  background-color: #f2f2f6;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
}

.mask-content-bottom {
  height: 8vh;
  justify-content: space-between;
}
.bottom-left,
.bottom-right {
  height: 100%;
  position: relative;
}
.bottom-right .image {
  width: 11vw;
  height: 11vw;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.bottom-right .image::after {
  content: "×";
  position: absolute;
  font-size: 40rpx;
  font-weight: bolder;
  top: 0rpx;
  right: 140rpx;
  background-color: #fcbc39;
  padding: 0 10rpx;
  border-radius: 50%;
  pointer-events: auto;
}
.bottom-left .icon {
  width: 10vw;
  height: 10vw;
}
.mask-content .button {
  color: #fff;
  width: 140rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  background-color: #3ab54d;
  border-radius: 20rpx;
}
/* 评论闪动 */
@keyframes newCommentAnimation {
  0% {
    background-color: initial;
  }

  50% {
    background-color: rgba(175, 170, 162, 0.308);
  }

  100% {
    background-color: initial;
  }
}

.newComment {
  transition: 1s;
  animation-name: newCommentAnimation;
  animation-timing-function: step-end;
  animation-duration: 1s;
  animation-delay: 0s;
  animation-iteration-count: 2;
}
/* 评论图片 */
.comment-item-right .commit-picture {
  width: 100%;
}
.comment-item-right .commit-picture .image {
  margin-top: 10rpx;
  width: 30vw;
  height: 30vw;
  border-radius: 20rpx;
}

/* 底部评论按钮 */
.bottom-button {
  width: 100%;
  height: 10vh;
  background-color: #fff;
  position: fixed;
  bottom: 0;
}
.bottom-input {
  width: 70%;
  height: 5vh;
  background-color: #f2f3f7;
  border-radius: 50rpx;
  margin-right: 50rpx;
}
.input-headPic {
  margin-left: 10rpx;
  width: 5vh;
  height: 5vh;
  border-radius: 50%;
}
.bottom-input-text {
  margin-left: 15%;
  color: #ccc;
}

.share-button {
  width: 3vh;
  height: 3vh;
}
.share {
  width: 5vh;
  height: 5vh;
  overflow: hidden;
}

.share-win {
  width: 100%;
  height: 30vh;
  background-color: #fff;
  position: fixed;
  top: 70vh;
  border-radius: 20rpx 20rpx 0 0;
}
.middle-content {
  margin-top: 40rpx;
}
.share-win .title {
  margin-top: 20rpx;
  font-size: 35rpx;
}
.common-button {
  width: 80%;
  color: #1e1d1f;
  border-radius: 100rpx;
  background-color: #f2f3f7;
  font-weight: 100;
  height: 6vh;
  margin-bottom: 0;
}
.share-win-item {
  margin-left: 40rpx;
  color: #8d8d8d;
}

.share-win-item .image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
