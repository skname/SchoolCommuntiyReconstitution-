.contain,
.bottom,
.logo {
  display: flex;
  flex-direction: column;
  align-items: center;
}


.contain {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background-color: #62D5C9;
}

.logo {
  position: absolute;
  z-index: 99;
  height: 40vh;
  justify-content: center;
} 

.logo image {
  width: 30vh;
  height: 30vh;
}

.bottom {
  box-sizing: border-box;
  padding: 0 20rpx;
  width: 100vw;
  background-color: #fff;
  position: absolute;
  z-index: 99;
  bottom: 0rpx;
}

.bottom-header {
  width: 100vw;
  height: 8vh;
  background-image: linear-gradient(#62D5C9, #fff);
}

.login-form {
  display: flex;
  flex-direction: column;
}

.input-group {
  display: flex;
  align-items: center;
  padding: 25rpx 10rpx;
  margin: 20rpx 0;
  background: #fff;
  border-radius: 5px;
  border: 2px solid #f4f4f4;
  transition: all .25s ease-in-out;
}

.input-group.active {
  border: 2px solid #7acfa6;
}

.input-label {
  color: #888;
  font-size: 13pt;
  height: 25rpx;
  line-height: 25rpx;
  padding: 0 25rpx;
  border-right: 1px solid #d8d8d8;
}

.input-group input,
.input-group picker {
  flex: 1;
  font-size: 13pt;
  min-height: 52rpx;
  height: 52rpx;
  line-height: 52rpx;
  padding: 0 25rpx;
}

.verific {
  width: 250rpx;
  height: 100rpx;
}

.verific-form,
.argee-protocol {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.argee-protocol {
  margin: 30rpx 0;
}

.verific-form .input-group {
  margin-right: 20rpx;
}

.login-button {
  font: 38rpx bold;
  color: #fff;
  width: 94%;
  line-height: 100rpx;
  background-color: cornflowerblue;
  text-align: center;
  border-radius: 20rpx;
  margin-bottom: 10vh;
}